{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"lib": ["ESNext"]
	},
	"exclude": ["node_modules", "**/*.spec.ts"]
}
